{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "BotC Sound Replacer",
  "author": "Stuart Thomson",
  "description": "Replace sounds in the official Blood on the Clocktower app.",
  "icons": {
    "128": "images/icon-128.png",
    "96": "images/icon-96.png",
    "64": "images/icon-64.png",
    "48": "images/icon-48.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://botc.app/*"],
  "web_accessible_resources": [
    { "matches": ["<all_urls>"], "resources": ["sounds/*.mp3"] }
  ],
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["src/content.ts"] }],
  "browser_specific_settings": {
    "gecko": {
      "id": "{84f7241e-6440-4fec-ac17-067357043e84}",
      "strict_min_version": "109.0"
    }
  }
}
