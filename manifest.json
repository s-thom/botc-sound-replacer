{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "BotC Sound Replacer",
  "description": "Replace sounds in the official Blood on the Clocktower app.",
  "icons": {
    "48": "images/extension_48.png"
  },
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": ["*://botc.app/*"],
  "declarative_net_request": {
    "rule_resources": [
      { "id": "gong", "enabled": false, "path": "/rules/gong.json" }
    ]
  },
  "web_accessible_resources": [
    { "matches": ["<all_urls>"], "resources": ["sounds/*.mp3"] }
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "48": "images/extension_48.png"
    }
  },
  "background": {
    "chromium:service_worker": "scripts/sw.ts",
    "firefox:scripts": ["scripts/background.ts"]
  },
  "author": "Stuart Thomson"
}
